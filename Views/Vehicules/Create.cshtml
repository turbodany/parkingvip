@model Parking_VIP.Data.Entities.Vehiculo

@{
    ViewData["Title"] = "Crear";
    
}

<h4>Datos de Vehiculo</h4>
<hr />

<div class="">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Placa" class="control-label"></label>
                    <input asp-for="Placa" class="form-control" />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="H_entrada" class="control-label"></label>
                    <input asp-for="H_entrada" class="form-control" />
                    <span asp-validation-for="H_entrada" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="H_salida" class="control-label"></label>
                    <input asp-for="H_salida" class="form-control" />
                    <span asp-validation-for="H_salida" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="N_parqueadero" class="control-label"></label>
                    <input asp-for="N_parqueadero" class="form-control" />
                    <span asp-validation-for="N_parqueadero" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-outline-success" value="Crear" />
                    <a asp-action="Index" class="btn btn-outline-warning">Regresar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
